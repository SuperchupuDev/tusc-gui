{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM"],

    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "rootDir": "src",

    "sourceMap": true,
    "outDir": "dist",
    "pretty": true,
    "noEmitOnError": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}
